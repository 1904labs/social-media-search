{
  "name": "Search on Social Media",
  "version": "2.0",
  "description": "Search Social Media Platforms by highlighted text",
  "permissions": ["activeTab", "declarativeContent", "contextMenus", "tabs", "storage", "https://stackoverflow.com/*"],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "32": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "icons": {
    "16": "images/lenny.png",
    "32": "images/lenny.png",
    "48": "images/lenny.png",
    "128": "images/lenny.png"
  },
  "manifest_version": 2
}

